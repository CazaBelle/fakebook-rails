<!DOCTYPE html>
<html>
  <head>
    <title>Fakebook</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"   %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%# <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %> %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>



  <body>
    <nav class="navbar navbar-inverse">
      <div class="container">
      <a class="navbar-brand" href='Fakebook', root_path>
        <% if user_signed_in? %>
          <ul class="nav navbar-nav navbar-left">
            <li><%= link_to "Post it", new_post_path %> </li>
            <li><%= link_to "Settings", edit_user_registration_path %></li>
            <li><%= link_to "Sign-Out", destroy_user_session_path, method: :delete %></li>
          </ul>
        <%else%>
          <ul class="nav navbar-nav navbar-left">
            <li> <%=link_to "Join", new_user_registration_path%></li>
            <li><%=link_to "Log In", new_user_session_path%></li>
          </ul>
        <%end%>
      </nav>


    <div class="container">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, class: "alert alert-info" %>       
      <%end%>
    </div>
    <%= yield %>   
  </body>
</html>
